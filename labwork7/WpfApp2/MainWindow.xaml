<Window x:Class="WpfApp2.PulsarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пульсар" Height="300" Width="300">
    <Grid>
        <Ellipse Width="200" Height="200">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop x:Name="InnerStop" Color="Red" Offset="0.2"/>
                    <GradientStop x:Name="YellowStop" Color="Yellow" Offset="0.5"/>
                    <GradientStop x:Name="OuterStop" Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</Window>
